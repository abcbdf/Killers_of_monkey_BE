{
    "compilerOptions": {
      "baseUrl": "src",
      "paths": {
        "@root/*": ["*"]
      },
      "noImplicitAny": true,
      "strictNullChecks": true,
      "module": "commonjs", 
      "target": "es6",
    },
    "include": [
      "src/**/*",
      "src/*"
    ],
    "exclude": [
      "node_modules"
    ]
}